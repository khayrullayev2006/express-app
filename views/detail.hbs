<div class="d-flex align-items-start gap-5 justify-content-between">
  <img class="w-50 h-100" src="{{product.image}}" alt="{{product.title}}" />
  <div>
    <h2 class="fw-bold">{{product.title}}</h2>
    <p class="mt-3">{{product.description}}</p>
    <p class="mt-3 d-flex align-items-center justify-content-end gap-2"><i
        class="bx bxs-time"
      ></i>{{formatDate product.createdAt}}</p>
  </div>
</div>
