{{#if products.length}}
  <h2 class="mb-4">My Products</h2>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each products}}
      <div class="col">
        <div class="card shadow-sm">
          <img src={{image}} alt={{title}} />
          <div
            class="card-body d-flex align-items-center justify-content-between"
          >
            <p class="fw-bold fs-4">{{title}}</p>
            <p class="fw-bold fs-4">${{price}}.00</p>
          </div>
          <div
            class="card-footer d-flex align-items-center justify-content-between"
          >
            <div aria-label="Basic outlined example">
              <a
                type="button"
                href="/product/{{_id}}"
                class="btn btn-outline-primary"
              >Detail</a>
              <a
                href="/product/edit/{{_id}}"
                type="button"
                class="btn btn-outline-secondary"
              >Edit</a>
              <form class="d-inline" action="/delete/{{_id}}" method="post">
                <button
                  type="submit"
                  class="btn btn-outline-danger"
                >Delete</button>
              </form>
            </div>
            <p
              class="mt-3 d-flex align-items-center justify-content-between gap-2"
            ><i class="bx bxs-time"></i>{{formatDate createdAt}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <section class="page_404 w-75 mx-auto">
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-10 col-sm-offset-1 text-center">
          <div class="four_zero_four_bg">
            <h1 class="text-center">404</h1>
          </div>
          <div class="contant_box_404">
            <h3 class="h2">Add new products</h3>
            <a href="/add" class="btn btn-primary btn-lg mb-5">Add products</a>
          </div>
        </div>
      </div>
    </div>
  </section>
{{/if}}